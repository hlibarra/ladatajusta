---
import Layout from '../layouts/Layout.astro';

interface Publication {
	id: string;
	state: string;
	title: string;
	slug: string;
	summary: string;
	body: string;
	category?: string | null;
	tags: string[];
	created_at: string;
	published_at?: string | null;
	content_sin_vueltas?: string | null;
	image_url?: string | null;
	pulso_informativo?: number | null;
	is_featured?: boolean;
	featured_order?: number | null;
}

interface PaginatedResponse {
	items: Publication[];
	total: number;
	limit: number;
	offset: number;
	has_more: boolean;
}

interface DisplayConfig {
	show_images: boolean;
}

const API_BASE = import.meta.env.PUBLIC_API_BASE_URL || 'http://backend:8000';

let featuredStories: Publication[] = [];
let recentStories: Publication[] = [];
let moreStories: Publication[] = [];
let error = false;

// Configuración de display
let displayConfig: DisplayConfig = { show_images: false };

try {
	const configRes = await fetch(`${API_BASE}/api/config/display`);
	if (configRes.ok) {
		const config = await configRes.json();
		displayConfig.show_images = config.show_images ?? false;
	}
} catch (e) {
	// usar defaults
}

// Cargar destacadas y no destacadas en paralelo
try {
	const [featuredRes, recentRes] = await Promise.all([
		fetch(`${API_BASE}/api/publications/featured`),
		fetch(`${API_BASE}/api/publications/search?limit=20&is_featured=false`)
	]);

	if (featuredRes.ok) {
		featuredStories = await featuredRes.json();
	}

	if (recentRes.ok) {
		const data: PaginatedResponse = await recentRes.json();
		const nonFeatured = data.items;
		recentStories = nonFeatured.slice(0, 6);
		moreStories = nonFeatured.slice(6, 14);
	} else {
		error = true;
	}
} catch (e) {
	error = true;
}

const featuredCount = featuredStories.length;
const totalPubs = featuredStories.length + recentStories.length + moreStories.length;

// Helper para tiempo relativo
function getTimeAgo(dateString: string): string {
	const date = new Date(dateString);
	const now = new Date();
	const diffMs = now.getTime() - date.getTime();
	const diffMins = Math.floor(diffMs / 60000);
	const diffHours = Math.floor(diffMins / 60);
	const diffDays = Math.floor(diffHours / 24);

	if (diffMins < 60) return `hace ${diffMins} min`;
	if (diffHours < 24) return `hace ${diffHours}h`;
	if (diffDays === 1) return 'ayer';
	if (diffDays < 7) return `hace ${diffDays} días`;
	return date.toLocaleDateString('es-AR', { day: 'numeric', month: 'short' });
}

// Mapeo de pulso informativo a estado editorial
function getEditorialState(pulso: number | null | undefined): string | null {
	if (!pulso) return null;
	const states: Record<number, string> = {
		1: 'estabilidad',
		2: 'incertidumbre',
		3: 'tensión',
		4: 'impacto',
		5: 'cierre'
	};
	return states[pulso] || null;
}

const showImages = displayConfig.show_images;
---

<Layout>
	{error ? (
		<div class="error-state">
			<p>No se pudo conectar con el servidor.</p>
		</div>
	) : totalPubs === 0 ? (
		<div class="empty-state">
			<p>Sin publicaciones disponibles.</p>
		</div>
	) : (
		<main class="editorial-index">
			{/* Noticias Destacadas - Grid dinámico según cantidad */}
			{featuredStories.length > 0 && (
				<section class={`featured-grid featured-${featuredCount}`}>
					{featuredStories.map((story, index) => (
						<article class={`featured-story featured-story-${index + 1}`}>
							<header class="story-meta">
								{story.category && (
									<span class="category">{story.category}</span>
								)}
								{getEditorialState(story.pulso_informativo) && (
									<span class="editorial-state">{getEditorialState(story.pulso_informativo)}</span>
								)}
								<time class="time">{getTimeAgo(story.published_at || story.created_at)}</time>
							</header>
							<h2 class="featured-title">
								<a href={`/p/${story.slug}`}>{story.title}</a>
							</h2>
							<p class="featured-summary">{story.content_sin_vueltas || story.summary}</p>
							{showImages && story.image_url && (
								<div class="featured-image">
									<img src={story.image_url} alt="" loading="lazy" />
								</div>
							)}
						</article>
					))}
				</section>
			)}

			{/* Noticias recientes */}
			{recentStories.length > 0 && (
				<section class="recent-stories">
					{recentStories.map((story) => (
						<article class="story-entry">
							<header class="story-meta">
								{story.category && (
									<span class="category">{story.category}</span>
								)}
								{getEditorialState(story.pulso_informativo) && (
									<span class="editorial-state">{getEditorialState(story.pulso_informativo)}</span>
								)}
								<time class="time">{getTimeAgo(story.published_at || story.created_at)}</time>
							</header>
							<h2 class="story-title">
								<a href={`/p/${story.slug}`}>{story.title}</a>
							</h2>
							<p class="story-summary">{story.content_sin_vueltas || story.summary}</p>
						</article>
					))}
				</section>
			)}

			{/* AdSense: In-feed Ad */}
			{recentStories.length > 0 && (
				<div class="ad-infeed">
					<ins class="adsbygoogle"
						style="display:block"
						data-ad-client="ca-pub-XXXXXXXXXX"
						data-ad-slot="XXXXXXXXXX"
						data-ad-format="fluid"
						data-ad-layout-key="-6t+ed+2i-1n-4w"></ins>
					<script is:inline>(adsbygoogle = window.adsbygoogle || []).push({});</script>
				</div>
			)}

			{/* En seguimiento */}
			{moreStories.length > 0 && (
				<section class="more-stories">
					<h3 class="section-label">En seguimiento</h3>
					<div class="stories-list">
						{moreStories.map((story) => (
							<article class="compact-entry">
								<header class="story-meta">
									{story.category && (
										<span class="category">{story.category}</span>
									)}
									<time class="time">{getTimeAgo(story.published_at || story.created_at)}</time>
								</header>
								<h3 class="compact-title">
									<a href={`/p/${story.slug}`}>{story.title}</a>
								</h3>
							</article>
						))}
					</div>
				</section>
			)}

		</main>
	)}
</Layout>

<style>
	/* ===== RESET Y BASE ===== */
	.editorial-index {
		max-width: 720px;
		margin: 0 auto;
		padding: 0 20px;
	}

	@media (min-width: 900px) {
		.editorial-index {
			max-width: 1100px;
			padding: 0 40px;
		}
	}

	/* ===== ESTADOS ===== */
	.error-state,
	.empty-state {
		text-align: center;
		padding: 80px 20px;
		color: var(--text-muted);
		font-size: 0.95rem;
	}

	/* ===== NOTICIAS DESTACADAS - GRID DINÁMICO ===== */
	.featured-grid {
		padding: 48px 0 56px;
		border-bottom: 1px solid var(--border-subtle);
	}

	.featured-story {
		border-left: 3px solid var(--accent-main, #6366f1);
		padding-left: 24px;
	}

	.featured-title {
		font-weight: 700;
		line-height: 1.15;
		letter-spacing: -0.02em;
		margin: 0 0 16px;
		color: var(--text-primary);
	}

	.featured-title a {
		color: inherit;
		text-decoration: none;
	}

	.featured-title a:hover {
		color: var(--text-secondary);
	}

	.featured-summary {
		line-height: 1.6;
		color: var(--text-secondary);
		margin: 0;
		display: -webkit-box;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.featured-image {
		margin-top: 20px;
	}

	.featured-image img {
		width: 100%;
		height: auto;
		display: block;
		border-radius: 4px;
	}

	/* === 1 DESTACADA: Grande, full width === */
	.featured-1 .featured-story {
		max-width: 720px;
	}

	.featured-1 .featured-title {
		font-size: clamp(1.875rem, 5vw, 2.75rem);
	}

	.featured-1 .featured-summary {
		font-size: 1.15rem;
		-webkit-line-clamp: 4;
	}

	/* === 2 DESTACADAS: Dos columnas iguales === */
	@media (min-width: 768px) {
		.featured-2 {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 48px;
		}
	}

	.featured-2 .featured-title {
		font-size: clamp(1.25rem, 3vw, 1.75rem);
	}

	.featured-2 .featured-summary {
		font-size: 0.95rem;
		-webkit-line-clamp: 3;
	}

	/* === 3 DESTACADAS: 1 grande + 2 pequeñas === */
	@media (min-width: 768px) {
		.featured-3 {
			display: grid;
			grid-template-columns: 1.2fr 1fr;
			grid-template-rows: auto auto;
			gap: 32px 48px;
		}

		.featured-3 .featured-story-1 {
			grid-row: span 2;
		}

		.featured-3 .featured-story-2,
		.featured-3 .featured-story-3 {
			border-left-width: 2px;
			padding-left: 20px;
		}
	}

	.featured-3 .featured-story-1 .featured-title {
		font-size: clamp(1.5rem, 4vw, 2.25rem);
	}

	.featured-3 .featured-story-1 .featured-summary {
		font-size: 1.05rem;
		-webkit-line-clamp: 5;
	}

	.featured-3 .featured-story-2 .featured-title,
	.featured-3 .featured-story-3 .featured-title {
		font-size: clamp(1.1rem, 2.5vw, 1.35rem);
	}

	.featured-3 .featured-story-2 .featured-summary,
	.featured-3 .featured-story-3 .featured-summary {
		font-size: 0.9rem;
		-webkit-line-clamp: 2;
	}

	/* === 4 DESTACADAS: Grid 2x2 === */
	@media (min-width: 768px) {
		.featured-4 {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 40px 48px;
		}
	}

	.featured-4 .featured-story {
		border-left-width: 2px;
		padding-left: 20px;
	}

	.featured-4 .featured-title {
		font-size: clamp(1.1rem, 2.5vw, 1.4rem);
	}

	.featured-4 .featured-summary {
		font-size: 0.9rem;
		-webkit-line-clamp: 2;
	}

	/* Mobile: todas las destacadas en columna */
	@media (max-width: 767px) {
		.featured-grid {
			display: flex;
			flex-direction: column;
			gap: 32px;
		}

		.featured-story {
			padding-left: 16px;
			border-left-width: 2px;
		}

		.featured-title {
			font-size: 1.25rem;
		}

		.featured-summary {
			font-size: 0.9rem;
			-webkit-line-clamp: 3;
		}
	}

	/* ===== METADATOS DE NOTICIA ===== */
	.story-meta {
		display: flex;
		align-items: baseline;
		gap: 0;
		margin-bottom: 12px;
		font-size: 0.8rem;
		color: var(--text-muted);
	}

	.category {
		color: var(--accent-muted, #64748b);
		font-weight: 500;
		text-transform: lowercase;
	}

	.category::after {
		content: '·';
		margin: 0 10px;
		color: var(--text-muted);
		opacity: 0.5;
	}

	.editorial-state {
		color: var(--text-muted);
	}

	.editorial-state::after {
		content: '·';
		margin: 0 10px;
		opacity: 0.5;
	}

	.time {
		color: var(--text-muted);
		opacity: 0.8;
	}

	/* ===== NOTICIAS RECIENTES ===== */
	.recent-stories {
		padding: 56px 0;
	}

	/* Desktop: dos columnas */
	@media (min-width: 900px) {
		.recent-stories {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 0 48px;
		}
	}

	.story-entry {
		padding: 40px 0;
		border-bottom: 1px solid var(--border-subtle);
		border-left: 2px solid transparent;
		padding-left: 20px;
		margin-left: -20px;
		transition: border-color 0.2s ease;
	}

	.story-entry:hover {
		border-left-color: var(--accent-recent, #10b981);
	}

	.story-entry:first-child {
		padding-top: 0;
	}

	.story-entry:last-child {
		border-bottom: none;
		padding-bottom: 0;
	}

	/* En grid de 2 columnas, ajustar los primeros dos */
	@media (min-width: 900px) {
		.story-entry:first-child,
		.story-entry:nth-child(2) {
			padding-top: 0;
		}

		.story-entry:last-child,
		.story-entry:nth-last-child(2):nth-child(odd) {
			border-bottom: none;
			padding-bottom: 0;
		}

		/* Si hay número impar, el último de la izquierda también sin borde */
		.story-entry:nth-last-child(2):nth-child(odd) {
			border-bottom: none;
		}
	}

	.story-title {
		font-size: 1.3rem;
		font-weight: 600;
		line-height: 1.3;
		letter-spacing: -0.01em;
		margin: 0 0 12px;
		color: var(--text-primary);
	}

	.story-title a {
		color: inherit;
		text-decoration: none;
	}

	.story-title a:hover {
		color: var(--text-secondary);
	}

	.story-summary {
		font-size: 0.975rem;
		line-height: 1.6;
		color: var(--text-secondary);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	/* ===== MÁS NOTICIAS ===== */
	.more-stories {
		padding: 48px 0;
		border-top: 1px solid var(--border-subtle);
	}

	.section-label {
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--accent-section, #f59e0b);
		margin: 0 0 32px;
	}

	.stories-list {
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.compact-entry {
		padding: 20px 0;
		border-bottom: 1px solid var(--border-subtle);
		padding-left: 16px;
		margin-left: -16px;
		border-left: 2px solid transparent;
		transition: border-color 0.2s ease;
	}

	.compact-entry:hover {
		border-left-color: var(--accent-section, #f59e0b);
	}

	.compact-entry:last-child {
		border-bottom: none;
	}

	.compact-title {
		font-size: 1rem;
		font-weight: 500;
		line-height: 1.4;
		margin: 0;
		color: var(--text-primary);
	}

	.compact-title a {
		color: inherit;
		text-decoration: none;
	}

	.compact-title a:hover {
		color: var(--text-secondary);
	}

	.compact-entry .story-meta {
		margin-bottom: 6px;
		font-size: 0.75rem;
	}

	/* ===== AVISO DEL SITIO ===== */
	.site-notice {
		padding: 48px 0 64px;
		border-top: 1px solid var(--border-subtle);
		margin-top: 48px;
	}

	.site-notice p {
		font-size: 0.8rem;
		line-height: 1.6;
		color: var(--text-muted);
		margin: 0;
		max-width: 480px;
		opacity: 0.7;
	}

	/* ===== COLORES DE CATEGORÍA (sutiles) ===== */
	.category[data-cat="política"],
	.story-entry:has(.category:contains("Política")) .category,
	.compact-entry:has(.category:contains("Política")) .category {
		color: #6366f1;
	}

	.category[data-cat="economía"] {
		color: #059669;
	}

	.category[data-cat="sociedad"] {
		color: #d97706;
	}

	.category[data-cat="deportes"] {
		color: #dc2626;
	}

	.category[data-cat="tecnología"] {
		color: #0891b2;
	}

	.category[data-cat="cultura"] {
		color: #7c3aed;
	}

	/* ===== RESPONSIVE ===== */
	@media (max-width: 640px) {
		.editorial-index {
			padding: 0 16px;
		}

		.featured-grid {
			padding: 32px 0 40px;
		}

		.recent-stories {
			padding: 40px 0;
		}

		.story-entry {
			padding: 28px 0;
			padding-left: 14px;
			margin-left: -14px;
		}

		.story-title {
			font-size: 1.1rem;
		}

		.story-summary {
			font-size: 0.9rem;
		}

		.more-stories {
			padding: 36px 0;
		}

		.compact-entry {
			padding: 18px 0;
			padding-left: 12px;
			margin-left: -12px;
		}

		.compact-title {
			font-size: 0.95rem;
		}

		.story-meta {
			font-size: 0.75rem;
		}

		.site-notice {
			padding: 32px 0 48px;
			margin-top: 32px;
		}

		.site-notice p {
			font-size: 0.75rem;
		}
	}

	/* ===== COLORES Y DARK MODE ===== */
	:root {
		--accent-muted: #6b7280;
		--accent-main: #64748b;
		--accent-recent: #64748b;
		--accent-section: #d97706;
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--accent-muted: #9ca3af;
			--accent-main: #94a3b8;
			--accent-recent: #94a3b8;
			--accent-section: #f59e0b;
		}
	}

	/* ===== ADSENSE IN-FEED ===== */
	.ad-infeed {
		padding: 16px;
		margin: 32px 0;
		background: var(--bg-card);
		border: 1px solid var(--border-subtle);
		border-radius: 8px;
		text-align: center;
	}
	.ad-infeed::before {
		content: 'PUBLICIDAD';
		display: block;
		font-size: 0.65rem;
		color: var(--text-muted);
		letter-spacing: 1px;
		margin-bottom: 8px;
	}
</style>
