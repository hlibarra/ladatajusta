---
import Layout from '../../layouts/Layout.astro';

const API_BASE = import.meta.env.PUBLIC_API_BASE_URL || 'http://localhost:8000';

interface Section {
	id: string;
	name: string;
	slug: string;
	description?: string | null;
	icon?: string | null;
	display_order: number;
	is_active: boolean;
}

interface SectionWithCount extends Section {
	publication_count?: number;
}

let sections: SectionWithCount[] = [];
let error = false;

try {
	const response = await fetch(`${API_BASE}/api/sections`);
	if (response.ok) {
		const data = await response.json();
		sections = Array.isArray(data) ? data : (data.sections || []);
		sections = sections.filter(s => s.is_active).sort((a, b) => a.display_order - b.display_order);
	} else {
		error = true;
	}
} catch (e) {
	error = true;
}

const title = 'Secciones - La Data Justa';
---

<Layout title={title}>
	{error ? (
		<div class="error-state">
			<p>No se pudieron cargar las secciones.</p>
			<a href="/" class="back-link">Volver al inicio</a>
		</div>
	) : (
		<main class="sections-page">
			<a href="/" class="back-nav">
				<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
					<path d="M19 12H5M12 19l-7-7 7-7"/>
				</svg>
				Inicio
			</a>

			<header class="page-header">
				<h1 class="page-title">Secciones</h1>
				<p class="page-description">Explora las noticias organizadas por tema.</p>
			</header>

			{sections.length === 0 ? (
				<div class="empty-state">
					<p>No hay secciones disponibles.</p>
				</div>
			) : (
				<div class="sections-grid">
					{sections.map((section) => (
						<a href={`/seccion/${section.slug}`} class="section-card">
							<h2 class="section-name">{section.name}</h2>
							{section.description && (
								<p class="section-description">{section.description}</p>
							)}
							<span class="section-arrow">
								<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
									<path d="M5 12h14M12 5l7 7-7 7"/>
								</svg>
							</span>
						</a>
					))}
				</div>
			)}

		</main>
	)}
</Layout>

<style>
	/* ===== BASE ===== */
	.sections-page {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.error-state,
	.empty-state {
		text-align: center;
		padding: 80px 20px;
		color: var(--text-muted);
	}

	.error-state .back-link {
		display: inline-block;
		margin-top: 16px;
		color: var(--text-secondary);
	}

	.error-state .back-link:hover {
		color: var(--text-primary);
	}

	/* ===== NAVEGACIÓN ===== */
	.back-nav {
		display: inline-flex;
		align-items: center;
		gap: 6px;
		color: var(--text-muted);
		font-size: 0.85rem;
		margin-bottom: 32px;
		transition: color 0.2s;
	}

	.back-nav:hover {
		color: var(--text-primary);
	}

	/* ===== HEADER ===== */
	.page-header {
		margin-bottom: 48px;
		padding-bottom: 32px;
		border-bottom: 1px solid var(--border-subtle);
	}

	.page-title {
		font-size: clamp(2rem, 6vw, 2.5rem);
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.03em;
		margin: 0 0 12px;
		color: var(--text-primary);
	}

	.page-description {
		font-size: 1.05rem;
		line-height: 1.5;
		color: var(--text-secondary);
		margin: 0;
	}

	/* ===== GRID DE SECCIONES ===== */
	.sections-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 16px;
	}

	@media (min-width: 640px) {
		.sections-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 20px;
		}
	}

	/* ===== TARJETA DE SECCIÓN ===== */
	.section-card {
		display: block;
		padding: 28px 24px;
		background: var(--bg-card);
		border: 1px solid var(--border-subtle);
		border-radius: 12px;
		transition: all 0.2s ease;
		position: relative;
		text-decoration: none;
	}

	.section-card:hover {
		background: var(--bg-card-hover);
		border-color: var(--border-medium);
		transform: translateY(-2px);
	}

	.section-name {
		font-size: 1.25rem;
		font-weight: 600;
		line-height: 1.3;
		margin: 0 0 8px;
		color: var(--text-primary);
		text-transform: capitalize;
	}

	.section-description {
		font-size: 0.9rem;
		line-height: 1.5;
		color: var(--text-secondary);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.section-arrow {
		position: absolute;
		right: 20px;
		top: 50%;
		transform: translateY(-50%);
		color: var(--text-muted);
		opacity: 0;
		transition: all 0.2s ease;
	}

	.section-card:hover .section-arrow {
		opacity: 1;
		color: var(--text-secondary);
		transform: translateY(-50%) translateX(4px);
	}

	/* ===== AVISO ===== */
	.site-notice {
		padding: 48px 0 64px;
		border-top: 1px solid var(--border-subtle);
		margin-top: 64px;
	}

	.site-notice p {
		font-size: 0.8rem;
		line-height: 1.6;
		color: var(--text-muted);
		margin: 0;
		max-width: 480px;
		opacity: 0.7;
	}

	/* ===== RESPONSIVE ===== */
	@media (max-width: 640px) {
		.sections-page {
			padding: 0 16px;
		}

		.back-nav {
			margin-bottom: 24px;
		}

		.page-header {
			margin-bottom: 32px;
			padding-bottom: 24px;
		}

		.page-title {
			font-size: 1.75rem;
		}

		.page-description {
			font-size: 1rem;
		}

		.section-card {
			padding: 24px 20px;
		}

		.section-name {
			font-size: 1.1rem;
		}

		.section-arrow {
			display: none;
		}

		.site-notice {
			padding: 32px 0 48px;
			margin-top: 48px;
		}

		.site-notice p {
			font-size: 0.75rem;
		}
	}
</style>
