---
import AdminLayout from '../../../layouts/AdminLayout.astro';

const { id } = Astro.params;
---

<AdminLayout title="Editar Noticia - Admin">
  <div class="page-header">
    <div>
      <a href="/admin/noticias" class="back-link">‚Üê Volver a noticias</a>
      <h1 class="page-title">Editar Noticia</h1>
    </div>
    <div class="header-actions" id="header-actions"></div>
  </div>

  <div class="editor-layout">
    <div class="editor-main">
      <div class="card">
        <form id="edit-form">
          <div class="form-group">
            <label class="form-label" for="title">Titulo</label>
            <input type="text" id="title" name="title" class="form-input" required />
          </div>

          <div class="form-group">
            <label class="form-label" for="summary">Resumen</label>
            <textarea id="summary" name="summary" class="form-textarea" rows="3" required></textarea>
          </div>

          <div class="form-group">
            <label class="form-label" for="body">Contenido</label>
            <textarea id="body" name="body" class="form-textarea" rows="10" required></textarea>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="form-label" for="category">Categoria</label>
              <input type="text" id="category" name="category" class="form-input" />
            </div>

            <div class="form-group">
              <label class="form-label" for="tags">Tags (separados por coma)</label>
              <input type="text" id="tags" name="tags" class="form-input" placeholder="tag1, tag2, tag3" />
            </div>
          </div>

          <div class="form-section">
            <h3 class="section-title">Niveles de Lectura</h3>

            <div class="form-group">
              <label class="form-label" for="content_sin_vueltas">Sin Vueltas (Ultra corto)</label>
              <textarea id="content_sin_vueltas" name="content_sin_vueltas" class="form-textarea" rows="2" placeholder="Version ultra corta de la noticia"></textarea>
            </div>

            <div class="form-group">
              <label class="form-label" for="content_lo_central">Lo Central (Esencial)</label>
              <textarea id="content_lo_central" name="content_lo_central" class="form-textarea" rows="4" placeholder="Version esencial de la noticia"></textarea>
            </div>

            <div class="form-group">
              <label class="form-label" for="content_en_profundidad">En Profundidad (Completo)</label>
              <textarea id="content_en_profundidad" name="content_en_profundidad" class="form-textarea" rows="8" placeholder="Version completa con contexto"></textarea>
            </div>
          </div>

          <div class="form-section">
            <h3 class="section-title">Multimedia</h3>
            <div id="media-list"></div>
            <button type="button" class="btn btn-secondary" id="add-media-btn">+ Agregar Imagen/Video</button>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
          </div>
        </form>
      </div>
    </div>

    <div class="editor-sidebar">
      <div class="card">
        <h3 class="sidebar-title">Vista previa</h3>
        <div class="preview-card" id="preview-card">
          <div class="preview-category" id="preview-category"></div>
          <h4 class="preview-title" id="preview-title">Titulo</h4>
          <p class="preview-summary" id="preview-summary">Resumen</p>
          <div class="preview-tags" id="preview-tags"></div>
        </div>
      </div>

      <div class="card">
        <h3 class="sidebar-title">Estado</h3>
        <div class="status-info">
          <span class="status-label">Estado actual:</span>
          <span class="badge" id="current-state">-</span>
        </div>
        <div class="status-actions" id="status-actions"></div>
      </div>
    </div>
  </div>
</AdminLayout>

<script define:vars={{ id }}>
  window.publicationId = id;
</script>

<script>
  import { authFetch } from '../../../lib/auth';

  declare const publicationId: string;

  let publication: any = null;

  async function loadPublication() {
    try {
      const r = await authFetch(`/api/publications/${publicationId}`);
      if (!r.ok) {
        window.location.href = '/admin/noticias';
        return;
      }

      publication = await r.json();
      populateForm();
      updatePreview();
      updateStatusUI();
    } catch (e) {
      console.error('Error:', e);
    }
  }

  function populateForm() {
    (document.getElementById('title') as HTMLInputElement).value = publication.title;
    (document.getElementById('summary') as HTMLTextAreaElement).value = publication.summary;
    (document.getElementById('body') as HTMLTextAreaElement).value = publication.body;
    (document.getElementById('category') as HTMLInputElement).value = publication.category || '';
    (document.getElementById('tags') as HTMLInputElement).value = (publication.tags || []).join(', ');

    // Reading levels
    (document.getElementById('content_sin_vueltas') as HTMLTextAreaElement).value = publication.content_sin_vueltas || '';
    (document.getElementById('content_lo_central') as HTMLTextAreaElement).value = publication.content_lo_central || '';
    (document.getElementById('content_en_profundidad') as HTMLTextAreaElement).value = publication.content_en_profundidad || '';

    // Media
    renderMediaList();
  }

  function updatePreview() {
    const title = (document.getElementById('title') as HTMLInputElement).value;
    const summary = (document.getElementById('summary') as HTMLTextAreaElement).value;
    const category = (document.getElementById('category') as HTMLInputElement).value;
    const tagsStr = (document.getElementById('tags') as HTMLInputElement).value;
    const tags = tagsStr.split(',').map(t => t.trim()).filter(t => t);

    document.getElementById('preview-title')!.textContent = title || 'Titulo';
    document.getElementById('preview-summary')!.textContent = summary || 'Resumen';

    const categoryEl = document.getElementById('preview-category')!;
    if (category) {
      categoryEl.textContent = category;
      categoryEl.style.display = 'inline-block';
    } else {
      categoryEl.style.display = 'none';
    }

    const tagsEl = document.getElementById('preview-tags')!;
    tagsEl.innerHTML = tags.map(t => `<span class="preview-tag">${t}</span>`).join('');
  }

  function updateStatusUI() {
    const stateEl = document.getElementById('current-state')!;
    stateEl.textContent = publication.state;
    stateEl.className = `badge badge-${getStateBadge(publication.state)}`;

    const actionsEl = document.getElementById('status-actions')!;
    let html = '';

    if (publication.state === 'draft') {
      html = `
        <button class="btn btn-success btn-full" id="publish-btn">Publicar</button>
        <button class="btn btn-danger btn-full" id="discard-btn">Descartar</button>
      `;
    } else if (publication.state === 'published') {
      html = `<button class="btn btn-warning btn-full" id="discard-btn">Descartar</button>`;
    } else if (publication.state === 'discarded') {
      html = `<button class="btn btn-secondary btn-full" id="restore-btn">Restaurar a borrador</button>`;
    }

    actionsEl.innerHTML = html;

    document.getElementById('publish-btn')?.addEventListener('click', () => changeState('published'));
    document.getElementById('discard-btn')?.addEventListener('click', () => changeState('discarded'));
    document.getElementById('restore-btn')?.addEventListener('click', restore);
  }

  function getStateBadge(state: string): string {
    switch (state) {
      case 'published': return 'success';
      case 'draft': return 'warning';
      case 'discarded': return 'error';
      default: return 'info';
    }
  }

  async function changeState(state: string) {
    try {
      const r = await authFetch(`/api/publications/${publicationId}/state`, {
        method: 'PATCH',
        body: JSON.stringify({ state }),
      });
      if (r.ok) {
        publication = await r.json();
        updateStatusUI();
      }
    } catch (e) {
      console.error('Error:', e);
    }
  }

  async function restore() {
    try {
      const r = await authFetch(`/api/publications/${publicationId}/restore`, {
        method: 'POST',
      });
      if (r.ok) {
        publication = await r.json();
        updateStatusUI();
      }
    } catch (e) {
      console.error('Error:', e);
    }
  }

  // Media handling
  function renderMediaList() {
    const mediaList = document.getElementById('media-list')!;
    const media = publication.media || [];

    if (media.length === 0) {
      mediaList.innerHTML = '<p class="text-muted">No hay multimedia agregada</p>';
      return;
    }

    mediaList.innerHTML = media.map((item: any, index: number) => `
      <div class="media-item" data-index="${index}">
        <div class="media-preview">
          ${item.type === 'image'
            ? `<img src="${item.url}" alt="${item.caption || ''}" />`
            : `<div class="video-icon">üé• Video</div>`}
        </div>
        <div class="media-info">
          <div><strong>${item.type === 'image' ? 'Imagen' : 'Video'}</strong></div>
          <div class="media-url">${item.url}</div>
          ${item.caption ? `<div class="media-caption">${item.caption}</div>` : ''}
        </div>
        <button type="button" class="btn-remove" data-index="${index}">√ó</button>
      </div>
    `).join('');

    // Add remove handlers
    mediaList.querySelectorAll('.btn-remove').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const index = parseInt((e.target as HTMLElement).getAttribute('data-index')!);
        removeMedia(index);
      });
    });
  }

  function addMedia() {
    const type = prompt('Tipo de media (image o video):');
    if (!type || (type !== 'image' && type !== 'video')) return;

    const url = prompt('URL:');
    if (!url) return;

    const caption = prompt('Caption (opcional):') || '';

    if (!publication.media) publication.media = [];
    publication.media.push({
      type,
      url,
      caption,
      order: publication.media.length
    });

    renderMediaList();
  }

  function removeMedia(index: number) {
    if (confirm('¬øEliminar este elemento multimedia?')) {
      publication.media.splice(index, 1);
      // Reorder
      publication.media.forEach((item: any, i: number) => item.order = i);
      renderMediaList();
    }
  }

  // Form submit
  document.getElementById('edit-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const title = (document.getElementById('title') as HTMLInputElement).value;
    const summary = (document.getElementById('summary') as HTMLTextAreaElement).value;
    const body = (document.getElementById('body') as HTMLTextAreaElement).value;
    const category = (document.getElementById('category') as HTMLInputElement).value;
    const tagsStr = (document.getElementById('tags') as HTMLInputElement).value;
    const tags = tagsStr.split(',').map(t => t.trim()).filter(t => t);

    // Reading levels
    const content_sin_vueltas = (document.getElementById('content_sin_vueltas') as HTMLTextAreaElement).value;
    const content_lo_central = (document.getElementById('content_lo_central') as HTMLTextAreaElement).value;
    const content_en_profundidad = (document.getElementById('content_en_profundidad') as HTMLTextAreaElement).value;

    try {
      const r = await authFetch(`/api/publications/${publicationId}`, {
        method: 'PUT',
        body: JSON.stringify({
          title,
          summary,
          body,
          category,
          tags,
          content_sin_vueltas,
          content_lo_central,
          content_en_profundidad,
          media: publication.media || []
        }),
      });

      if (r.ok) {
        publication = await r.json();
        alert('Cambios guardados');
      } else {
        alert('Error al guardar');
      }
    } catch (e) {
      console.error('Error:', e);
      alert('Error al guardar');
    }
  });

  // Add media button
  document.getElementById('add-media-btn')?.addEventListener('click', addMedia);

  // Live preview
  ['title', 'summary', 'category', 'tags'].forEach(field => {
    document.getElementById(field)?.addEventListener('input', updatePreview);
  });

  // Initial load
  document.addEventListener('DOMContentLoaded', loadPublication);
</script>

<style>
  .back-link {
    display: inline-block;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 8px;
  }

  .back-link:hover {
    color: var(--text-secondary);
  }

  .editor-layout {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 24px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .form-actions {
    margin-top: 24px;
    padding-top: 24px;
    border-top: 1px solid var(--border-subtle);
  }

  .sidebar-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 16px;
  }

  .preview-card {
    padding: 16px;
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
  }

  .preview-category {
    display: inline-block;
    padding: 4px 10px;
    background: rgba(59, 130, 246, 0.15);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    color: var(--accent-secondary);
    font-weight: 500;
    margin-bottom: 12px;
  }

  .preview-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .preview-summary {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 12px;
  }

  .preview-tags {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }

  .preview-tag {
    padding: 2px 8px;
    background: var(--bg-card);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .status-info {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .status-label {
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .status-actions {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .btn-full {
    width: 100%;
    justify-content: center;
  }

  .editor-sidebar .card {
    margin-bottom: 20px;
  }

  .form-section {
    margin-top: 32px;
    padding-top: 32px;
    border-top: 2px solid var(--border-subtle);
  }

  .section-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 20px;
  }

  .media-item {
    display: flex;
    gap: 12px;
    padding: 12px;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-md);
    margin-bottom: 12px;
    align-items: center;
  }

  .media-preview {
    flex-shrink: 0;
    width: 80px;
    height: 60px;
    border-radius: var(--radius-sm);
    overflow: hidden;
    background: var(--bg-card);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .media-preview img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-icon {
    font-size: 1.5rem;
  }

  .media-info {
    flex: 1;
    min-width: 0;
  }

  .media-url {
    font-size: 0.85rem;
    color: var(--text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .media-caption {
    font-size: 0.85rem;
    color: var(--text-secondary);
    font-style: italic;
    margin-top: 4px;
  }

  .btn-remove {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    border: none;
    background: var(--danger);
    color: white;
    border-radius: 50%;
    cursor: pointer;
    font-size: 1.5rem;
    line-height: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-remove:hover {
    background: #dc2626;
  }

  .text-muted {
    color: var(--text-muted);
    font-style: italic;
    font-size: 0.9rem;
  }

  @media (max-width: 1024px) {
    .editor-layout {
      grid-template-columns: 1fr;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>
