# Configuracion local del backend
APP_ENV=dev
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:4321

# Base de datos PostgreSQL (Docker con pgvector)
DATABASE_URL=postgresql+asyncpg://ladatajusta:ladatajusta@localhost:5432/ladatajusta

# OpenAI (opcional, dejar vacio si no usas funciones de AI)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# User agent para scraping
USER_AGENT=LaDataJustaBot/0.1 (+https://ladatajusta.local)

# JWT Authentication (cambiar en produccion)
JWT_SECRET=change-this-secret-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
